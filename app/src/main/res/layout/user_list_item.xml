<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/member_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profile_placeholder" />

    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/member_picture"
        android:layout_toRightOf="@+id/member_picture"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Noon" />

    <TextView
        android:id="@+id/member_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_name"
        android:layout_toEndOf="@+id/member_picture"
        android:layout_toRightOf="@+id/member_picture"
        android:textColor="#C1C1C1"
        android:textStyle="italic"
        android:textSize="12sp"
        tools:text="24 Février 2018" />

    <TextView
        android:id="@+id/member_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/member_date"
        android:layout_toEndOf="@+id/member_picture"
        android:layout_toRightOf="@+id/member_picture"
        android:textStyle="italic"
        android:textSize="14sp"
        tools:text="24 Février 2018" />

    <TextView
        android:id="@+id/member_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/member_status"
        android:layout_alignBottom="@+id/member_status"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="Online" />
    </RelativeLayout>